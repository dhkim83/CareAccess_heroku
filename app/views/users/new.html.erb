<h1>Sign up</h1>

<div class="signUpForm text-center">

<%= form_for @user do |f| %>
<p5>
 Name <%= f.text_field :name, placeholder: "create your user name" %><br />
 Email <%= f.text_field :email, placeholder: "enter your email address" %><br />

 Password <%= f.password_field :password, placeholder: "create a password" %>
 Confirmation<%= f.password_field :password_confirmation, placeholder: "re-enter a password" %>

</p5>

  <%= f.submit "Create your Account", class: "btn btn-primary btn-large" %>

<% end %>

<br><br />

<%= link_to "Go back to the main page", users_path %>
</div>





  