<h1>Edit User</h1>


<div class="signUpForm text-center">

<%= form_for @user do |f| %>
<p5>
  Name <%= f.text_field :name, placeholder: "edit your user name" %><br />
  Email <%= f.text_field :email, placeholder: "edit your email address" %><br />

  <%= f.password_field :password, placeholder: "your password" %><br />
  <%= f.password_field :password_confirmation, placeholder: "re-enter your password" %>

  </p5>

  <%= f.submit "Edit User", class: "btn btn-primary btn-large" %>

<% end %>

</div>

<br><br />

<%= link_to 'Go to your page', users_path %>
<%= link_to 'Go back to the main page', users_path %>



